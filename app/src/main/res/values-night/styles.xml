<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Кастомный стиль для последнего вычисления -->
    <style name="MyTextStyleLastval">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFEB3B</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Кастомный стиль для функциональных кнопок-->
    <style name="MyTextStyleButtons">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Кастомный стиль для цифр-->
    <style name="MyTextStyleNums">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/buttons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.9</item>
    </style>

    <!-- Кастомный стиль для текстовых полей-->
    <style name="MyTextStyleTextViev">
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>