<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Кастомный стиль для последнего вычисления -->
    <style name="MyTextStyleLastval">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Кастомный стиль для функциональных кнопок-->
    <style name="MyTextStyleButtons">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.8</item>
    </style>

    <!-- Кастомный стиль для цифр-->
    <style name="MyTextStyleNums">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/buttons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.8</item>
    </style>

    <!-- Кастомный стиль для текстовых полей-->
    <style name="MyTextStyleTextViev">
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/general_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.8</item>
    </style>

</resources>